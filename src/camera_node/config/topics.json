{
  "version": "1.1.0",
  "description": "All ROS2 topic configurations for the system",
  
  "camera": {
    "input": {
      "name": "/camera/color/image_raw/compressed",
      "type": "sensor_msgs/CompressedImage",
      "description": "카메라 원본 이미지 (압축)"
    },
    "tracking_data": {
      "name": "/allex_camera/tracking_data",
      "type": "std_msgs/String",
      "description": "추적 상태 및 데이터 (JSON)"
    },
    "target_crop": {
      "name": "/allex_camera/target_crop/compressed",
      "type": "sensor_msgs/CompressedImage",
      "description": "타겟 BB Box Crop 이미지"
    },
    "manual_control": {
      "name": "/allex_camera/manual_control",
      "type": "std_msgs/String",
      "description": "GUI에서 오는 수동 제어 명령"
    }
  },
  
  "robot": {
    "neck_command": {
      "name": "/robot_inbound/theOne_neck/joint_command",
      "type": "std_msgs/Float64MultiArray",
      "description": "목 관절 명령"
    },
    "neck_position": {
      "name": "/robot_outbound_data/theOne_neck/joint_positions_deg",
      "type": "std_msgs/Float64MultiArray",
      "description": "목 관절 현재 위치 (degree)"
    },
    "waist_command": {
      "name": "/robot_inbound/theOne_waist/joint_command",
      "type": "std_msgs/Float64MultiArray",
      "description": "허리 관절 명령"
    },
    "waist_position": {
      "name": "/robot_outbound_data/theOne_waist/joint_positions_deg",
      "type": "std_msgs/Float64MultiArray",
      "description": "허리 관절 현재 위치 (degree)"
    },
    "hmi_command": {
      "name": "hmi/robot_command",
      "type": "std_msgs/String",
      "description": "HMI 로봇 명령 (Routine 제어)"
    }
  },
  
  "llm": {
    "response": {
      "name": "/llm/response",
      "type": "std_msgs/String",
      "description": "LLM 응답 메시지"
    }
  }
}

